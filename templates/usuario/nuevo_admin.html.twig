{% extends 'layout.html.twig' %}
{% block title %}Nuevo usuario{% endblock %}
{% block section %}
    <h1 class="titulosection3">Nuevo usuario</h1>
    
    {{ form_start(formulario) }}

    {{ form_label(formulario.dni, 'Número dni')}}
    {{ form_widget(formulario.dni, {'attr':{'pattern': '[0-9]{8}[A-Za-z]{1}'}})}}  
    {{ form_row(formulario.nombre, { 'label': 'Nombre' }) }}    
    {{ form_row(formulario.apellidos, { 'label': 'Apellidos' }) }}  
    {{ form_row(formulario.pass, { 'label': 'Contraseña' }) }}   
    {{ form_row(formulario.email, { 'label': 'E-mail' }) }}   
    {{ form_row(formulario.telefono, { 'label': 'Teléfono' }) }} 
    {{ form_row(formulario.Rol, { 'label': 'rol' }) }}
    {{ form_row(formulario.puntos, { 'label': 'Puntos' }) }}
    
    {{ form_end(formulario) }}
{% endblock %}


